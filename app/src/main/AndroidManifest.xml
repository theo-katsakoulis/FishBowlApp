<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.theo.fishbowlapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/main_icon"
        android:supportsRtl="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainRulesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/label_MainRulesActivity">
        </activity>

        <activity
            android:name=".MainLanguageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/label_MainLanguageActivity">
        </activity>

        <activity
            android:name=".SettingsGameplayActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/label_SettingsGamePlayActivity"
            android:windowSoftInputMode="stateHidden|adjustPan">  <!-- hide keyboard when activity starts -->
        </activity>

        <activity
            android:name=".SettingsCategoriesActivity"
            android:label="@string/label_SettingsChooseCategoriesActivity"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:label="@string/label_SettingsTeamDetailsActivity"
            android:screenOrientation="portrait"
            android:name=".SettingsTeamsActivity"
            android:windowSoftInputMode="stateHidden|adjustPan">  <!-- hide keyboard when activity starts -->
        </activity>

        <activity
            android:name=".SettingsWordsActivity"
            android:label="@string/label_SettingsInsertWordsActivity"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".PlayingGameActivity"
            android:label="@string/label_PlayingGameActivity"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".InfoBetweenRoundFirstActivity"
            android:label="@string/label_InfoBetweenRoundActivity"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".InfoBetweenRoundSecondActivity"
            android:label="@string/label_InfoBetweenRoundActivity"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".InfoEndOfRoundActivity"
            android:label="@string/label_InfoEndOfRoundActivity"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".InfoBeforeNewRoundActivity"
            android:label="@string/label_InfoBeforeNewRoundActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".InfoEndOfGameActivity"
            android:label="@string/label_InfoEndOfGameActivity"
            android:screenOrientation="portrait" >
        </activity>

    </application>

</manifest>